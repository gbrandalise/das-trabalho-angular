    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Spring Application",
            "request": "launch",
            "console": "internalConsole",
            "cwd": "${workspaceFolder}/backend",
            "mainClass": "br.com.ufpr.das.Application",
            "projectName": "das-angular-api"
        },
        {
            "name": "Launch Angular Application on Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:4200/",
            "webRoot": "${workspaceFolder}/frontend",
            "preLaunchTask": "start"
        },
        {
            "name": "Launch Flutter Application",
            "request": "launch",
            "type": "dart",
            "cwd": "${workspaceFolder}/mobile",
        }
    ]
}