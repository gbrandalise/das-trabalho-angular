{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start",
            "type": "npm",
            "script": "start",
            "isBackground": true,
            "path": "frontend/",
            "presentation": {
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": {
                "owner": "typescript",
                "source": "ts",
                "applyTo": "closedDocuments",
                "fileLocation": [
                    "relative",
                    "${cwd}"
                ],
                "pattern": "$tsc",
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": {
                        "regexp": "(.*?)"
                    },
                    "endsPattern": {
                        "regexp": "Compiled |Failed to compile."
                    }
                }
            }
        }
    ]
}